{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES6",
    "lib": ["dom", "es6", "es7", "es2017", "esnext"],
    "declaration": true,
    "sourceMap": false,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "esNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
