{
  "name": "recraft-workspaces",
  "description": "workspaces for poe-recraft",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "repository": {
    "url": "https://github.com/eps1lon/poe-recraft.git",
    "type": "git"
  },
  "scripts": {
    "bootstrap": "yarn workspace poe-mods build && yarn workspace poe-i18n build && yarn workspace poe-components-item build",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls.js",
    "format": "yarn workspaces run format",
    "postinstall": "yarn bootstrap",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage --runInBand"
  },
  "workspaces": [
    "packages/*",
    "scripts",
    "website"
  ],
  "devDependencies": {
    "coveralls": "^3.0.2"
  }
}
